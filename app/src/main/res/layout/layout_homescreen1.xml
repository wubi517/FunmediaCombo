<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    android:keepScreenOn="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|left"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon"
                android:layout_marginLeft="10dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="TV Guide"
                android:textColor="@color/homescreen_textcolor"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/time_layout_homescreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:padding="5dp"
                    android:textColor="@color/homescreen_textcolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/date_layout_homescreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:padding="5dp"
                    android:textColor="@color/homescreen_textcolor"
                    android:textSize="14sp" />

            </LinearLayout>

        </FrameLayout>
        <LinearLayout
            android:background="@drawable/above_back"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.8"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:orientation="horizontal">

            <View
                android:visibility="gone"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="12dp"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/white" />

                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Info"
                        android:textColor="@color/white"/>

                    <View
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/epg_time_homescreen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@color/homescreen_textcolor"
                        android:textSize="15sp" />


                    <TextView
                        android:id="@+id/epg_name_homescreen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:padding="5dp"
                        android:textColor="@color/homescreen_textcolor"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:id="@+id/epg_duration_homescreen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:textAlignment="textEnd"
                        android:textColor="@color/homescreen_textcolor"
                        android:textSize="15sp"
                        android:layout_marginRight="10dp"
                        android:gravity="end" />

                </LinearLayout>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/epg_description_homescreen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:minLines="2"
                        android:padding="5dp"
                        android:textColor="@color/homescreen_textcolor"
                        android:textSize="13sp" />
                </ScrollView>
                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white" />

            </LinearLayout>

            <View
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.55"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="5dp" />

        </LinearLayout>
        <LinearLayout
            android:background="@drawable/below_back"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/container_channels_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/below_selection">
                <LinearLayout
                    android:id="@+id/linear_container_channel_categories"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" />
            </ScrollView>
            <LinearLayout
                android:paddingLeft="20sp"
                android:background="@drawable/below_back_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:text="Today"
                        android:textColor="@color/homescreen_textcolor"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7">

                    <TextView
                        android:id="@+id/time_1st_half_homescreen"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:text="7:00"
                        android:textColor="@color/homescreen_textcolor"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/time_2nd_half_homescreen"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:text="7:30"
                        android:textColor="@color/homescreen_textcolor"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/time_3rd_half_homescreen"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:text="8:00"
                        android:textColor="@color/homescreen_textcolor"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/time_4th_half_homescreen"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:text="8:30"
                        android:textColor="@color/homescreen_textcolor"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

            <ScrollView
                android:paddingLeft="20sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/linear_epg_list_homescreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
    <SurfaceView
        android:layout_alignParentRight="true"
        android:id="@+id/player_homescreen"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:padding="2dp"
        android:visibility="visible" />
</RelativeLayout>

