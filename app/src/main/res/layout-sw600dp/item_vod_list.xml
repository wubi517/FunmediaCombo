<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/main_lay"
    android:layout_width="match_parent"
    android:layout_height="37sp"
    android:background="@drawable/list_item_channel_draw"
    android:padding="5dp"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0sp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/yelloback"
            android:text="1"
            android:id="@+id/vod_list_hd"
            android:textColor="@color/channel_color"
            android:layout_width="45dp"
            android:layout_height="match_parent" />
        <ImageView
            android:visibility="gone"
            android:layout_marginLeft="5sp"
            android:layout_gravity="center_vertical"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/image_star"
            android:id="@+id/image_star"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8sp"
            android:text="Action"
            android:id="@+id/vod_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/num_color1"
            android:textSize="20sp"/>
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:visibility="gone"
        android:padding="-5sp"
        android:layout_width="1sp"
        android:layout_height="match_parent"
        android:background="@color/gray"/>
    <LinearLayout
        android:id="@+id/ly_info"
        android:visibility="gone"
        android:layout_marginLeft="5sp"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="0.3">
        <TextView
            android:id="@+id/vod_date"
            android:layout_marginLeft="5sp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="June 2018"
            android:textColor="@color/num_color1"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>