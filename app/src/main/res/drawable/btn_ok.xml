<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <shape android:shape="rectangle"  >
            <solid android:color="#275399" />
            <corners android:bottomRightRadius="8dp"
                android:bottomLeftRadius="8dp"
                android:topRightRadius="8dp"
                android:topLeftRadius="8dp"/>
            <gradient
                android:startColor="#1b3a6d"
                android:centerColor="#254e8f"
                android:endColor="#1b3a6d"
                android:angle="90"/>
            <stroke android:width="3px" android:color="#6389c8" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape android:shape="rectangle"  >
            <solid android:color="#275399" />
            <corners android:bottomRightRadius="8dp"
                android:bottomLeftRadius="8dp"
                android:topRightRadius="8dp"
                android:topLeftRadius="8dp"/>
            <gradient
                android:startColor="#1b3a6d"
                android:centerColor="#254e8f"
                android:endColor="#1b3a6d"
                android:angle="90"/>
            <stroke android:width="3px" android:color="#fda754" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle"  >
            <solid android:color="#275399" />
            <corners android:bottomRightRadius="8dp"
                android:bottomLeftRadius="8dp"
                android:topRightRadius="8dp"
                android:topLeftRadius="8dp"/>
            <gradient
                android:startColor="#1b3a6d"
                android:centerColor="#254e8f"
                android:endColor="#1b3a6d"
                android:angle="90"/>
            <stroke android:width="2px" android:color="#6389c8" />
        </shape>
    </item>
</selector>